<p>
  <strong>User:</strong>
  <%= @post.user.username %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>
<% if can? :update, @post %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>
<%= link_to 'Back', posts_path %>

<hr>
<h2>Comments</h2>
<%= render @post.comments %>
<hr>

<% if can? :create, Comment %>
<h2>Add a comment:</h2>
<p>
  <%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
    <%= f.label :content %>
    <%= f.text_area :content, rows: 10, cols: 60 %>
    </p>
    <p><%= f.submit %></p>
  <% end %>
</p>
<% end %>
